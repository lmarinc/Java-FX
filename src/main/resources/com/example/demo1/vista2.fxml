<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.VistaController2">
    <TableView fx:id="personTable" GridPane.columnIndex="0" GridPane.columnSpan="12" GridPane.rowIndex="0" GridPane.rowSpan="12">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nombre" />
            <TableColumn fx:id="surnameColumn" text="Apellidos" />
            <TableColumn fx:id="ageColumn" text="Edad" />
        </columns>
    </TableView>

    <Button onAction="#showAddPersonaDialog" text="Agregar Persona" GridPane.columnIndex="0" GridPane.rowIndex="14" />
</GridPane>
